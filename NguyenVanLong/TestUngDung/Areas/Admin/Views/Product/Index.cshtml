@using PagedList.Mvc;
@using PagedList;
@model PagedList.IPagedList<ModelEF.Model.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<style>
    img#imgProduct {
        width: 150px;
        height: 150px;
        object-fit: contain;
    }

    td > a {
        color: blue;
        font-weight: bold;
    }

    #titleMain {
        font-size: 20px;
    }

    .form-group input#buttonMain {
        padding: 10px 15px;
        width: 200px;
    }

    #bntChoosImage {
        margin-top: 10px;
    }
</style>

@section header {
    <div id="titleMain">
        <i class="fa fa-book"></i>&nbsp;
        Quản lý sản phẩm
    </div>
}

@using (Html.BeginForm("Index", "Product", FormMethod.Get))
{
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="col-lg-12 form-group">
        <div class="col-md-6">
            @Html.ActionLink("Tạo sản phẩm mới", "Create", "Product", null, new { @class = "btn btn-danger" })
        </div>
        <div class="col-md-4">
            <input id="input_search" onfocus="this.value=''" type="text" value="@ViewBag.SearchString" name="searchString" placeholder="Nhập từ khóa tìm kiếm" class="form-control" />
        </div>
        <div class="col-md-2">
            <input type="submit" value="Tìm kiếm" class="btn btn-primary" />
        </div>
    </div>
}
<table class="table">
    <tr>
        <th>
            Mã sản phẩm
        </th>
        <th>
            Tên sản phẩm
        </th>
        <th>
            Đơn giá
        </th>
        <th>Số lượng</th>
        <th>Loại Sản phẩm</th>
        <th style="text-align:center; width:15%">Hành động</th>
    </tr>
    @if (Model.Count() <= 0)
    {
        <tr><td colspan="5">List none</td></tr>
    }
    @foreach (var item in Model)
    {

        <tr id="row_@item.ID">
            <td>
                @item.ID
            </td>
            <td>
                @item.Name
            </td>

            <td>
                @item.UnitCost VND
            </td>
            <td>@item.Quantity</td>
            <td>
                @item.Category.Name
            </td>
            <td style="text-align:center; color:blue">@Html.ActionLink("Xem chi tiết", "Detail", new { Id_Product = item.ID })</td>
        </tr>
    }

</table>
<div>
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page, @searchString = @ViewBag.SearchString }))
</div>
