@model ModelEF.Model.Product
@{
    ViewBag.Title = "Detail";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<style>
    img#imgProduct {
        width: 150px;
        height: 150px;
        object-fit: contain;
    }

    #titleMain {
        font-size: 20px;
    }

    .form-group input#buttonMain {
        padding: 10px 15px;
        width: 200px;
    }
    .button__action {
        display:flex;
        margin:0;
        justify-content:space-around;
        align-items:center;
        align-content:center;   
        align-self:center;
        padding:1rem;
    }
    .col-md-6 {
        margin:08px auto;
    }
    .glyphicon.glyphicon-edit, .glyphicon.glyphicon-trash {
        font-size: 30px;
    }
</style>

@section header{
    <div id="titleMain">
        <i class="fa fa-camera"></i>&nbsp;Chi tiết sản phẩm
    </div>

}

@section footerjs {

    <script>
        function reloadPage() {
            setTimeout(() => {
                window.location.reload();
            }, 500)
        }
    </script>
}
